@model TrashCollection.Models.Customer

@{
    ViewBag.Title = "EditDay";
}

<h2>EditDay</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Customer</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.FirstName)
    @Html.HiddenFor(model => model.LastName)
    @Html.HiddenFor(model => model.ZipCode)
    @Html.HiddenFor(model => model.StreetAddress)
    @Html.HiddenFor(model => model.City)
    @Html.HiddenFor(model => model.State)
    @Html.HiddenFor(model => model.PickUpEndDateSuspend)
    @Html.HiddenFor(model => model.PickUpStartDateSuspend)

    <div class="form-group">
        @Html.LabelFor(model => model.DaysOfTheWeekPickUp, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DaysOfTheWeekPickUp, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DaysOfTheWeekPickUp, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
